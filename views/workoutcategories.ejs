<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </head>
    <body>
      <div style="margin-bottom: 40px;">
        <nav class="navbar navbar-expand-lg navbar-light bg-primary">
            <img src="https://health.clevelandclinic.org/wp-content/uploads/sites/3/2018/04/postWorkoutRecovery-1146620841-770x553-1.jpg" class="img-fluid" alt="..." width="100px" height="100px" style="padding: 10px; margin: 2px;">
            <h5 style="color: white;">Hi... !<%= user %></h5>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav text-dark">
                <li class="nav-item">
                  <a href="/dashboard" class="nav-link" style="position: relative; left: 560px; color: white;">Workout</a>
                </li>
                <li class="nav-item text-dark">
                  <a href="/report" class="nav-link" style="position: relative; left: 580px; color: white;">Report</a>
                </li>
                <li class="nav-item text-dark">
                    <a href="/logout" class="nav-link" style="position: relative; left: 600px; color: white;">Logout</a>
                  </li>
              </ul>
            </div>
          </nav>

    </div>
        <div style="display: flex; flex-wrap: wrap; border: 1px solid forestgreen; padding : 30px; width: 800px; padding-right: 30px; margin-left: 270px; height: 250px;">
            <table style="margin-right: 40px; border: 1px solid brown; width: 500px; background-color: azure;">
              <thead align="center">
                <tr>
                  <th style="border: 1px solid brown;">category</th>
                  <th style="border: 1px solid brown;">Workout</th>
                  <th style="border: 1px solid brown;">Sets</th>
                  <th style="border: 1px solid brown;">Repetition</th>
                  
              </tr>
            </thead>
            <tbody style="border: 1px solid brown;">
              <% categories.forEach(function(data){ %>
                <% data.category.forEach(function(category,index){ %>
                  <tr style="border: 1px solid brown; background-color: azure;">
                    <td align="center" style="border: 1px solid brown;"> <%= category %></td>
                    <td align="center" style="border: 1px solid brown;"> <%= data.workout[index] %></td>
                    <td align="center" style="border: 1px solid brown;"> <%= data.sets[index] %></td>
                    <td align="center" style="border: 1px solid brown;"> <%= data.Repetition[index] %></td>
                  </tr>
                <% }) %>
              <% }) %>
            </tbody>
          </table>
        <div>
          <% categories.forEach(function(data){ %>
            <form action="/report/<%= data.Day %>" method="post">
              <input type="date" name="date"><br><br>
              <button class="btn btn-primary">Done</button>
            </form>

          <% }) %>
          
        </div>
      </div>
       
         
        
        
          
        
        

    </body>
</html>